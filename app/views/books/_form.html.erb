<% was_validated = book.errors.any? %>

<%= form_with(model: book, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = book.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% book.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% author_class = "form-control" %>
    <% author_was_invalid = book.errors.include?(:author) %>

    <% if was_validated %>
      <% if author_was_invalid %>
        <% author_class << " is-invalid" %>
      <% else %>
        <% author_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :author %>
    <%= f.text_field :author, class: author_class, placeholder: "Enter author" %>
    <% if author_was_invalid %>
      <% book.errors.full_messages_for(:author).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% genre_class = "form-control" %>
    <% genre_was_invalid = book.errors.include?(:genre) %>

    <% if was_validated %>
      <% if genre_was_invalid %>
        <% genre_class << " is-invalid" %>
      <% else %>
        <% genre_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :genre %>
    <%= f.text_field :genre, class: genre_class, placeholder: "Enter genre" %>
    <% if genre_was_invalid %>
      <% book.errors.full_messages_for(:genre).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% page_length_class = "form-control" %>
