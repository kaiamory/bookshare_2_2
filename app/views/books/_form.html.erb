        <% page_length_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :page_length %>
    <%= f.text_field :page_length, class: page_length_class, placeholder: "Enter page length" %>
    <% if page_length_was_invalid %>
      <% book.errors.full_messages_for(:page_length).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = book.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <%= f.number_field :user_id, class: user_class, placeholder: "Enter user" %>
    <% if user_was_invalid %>
      <% book.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% author_class = "form-control" %>
    <% author_was_invalid = book.errors.include?(:author) %>

    <% if was_validated %>
