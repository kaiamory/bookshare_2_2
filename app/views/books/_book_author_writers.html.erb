<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Author Writers

    <a data-toggle="collapse" href="#book_author_writers_new_form">
      Add author
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @book.author_writers.each do |author| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to author, author %>

        <%= link_to author, method: :delete, data: { confirm: "Do you really want to delete this author" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="book_author_writers_new_form">
        <%= render partial: "books/book_author_writers_new_form" %>
      </div>
    </div>

  </ul>
</div>
