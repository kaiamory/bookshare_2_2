<!-- Form author start -->
<%= form_with(model: @author, local: true) do |f| %>
<!-- Form author end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <%= f.label :name %>

    <!-- Input for name start -->
    <%= f.text_field :name, class: "form-control" %>
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for image start -->
  <div class="form-group">
    <%= f.label :image %>

    <!-- Input for image start -->
    <%= f.text_field :image, class: "form-control" %>
    <!-- Input for image end -->
  </div>
  <!-- Label and input for image end -->

  <!-- Label and input for book_id start -->
  <!-- Input for book_id start -->
  <%= f.hidden_field :book_id, value: @book.id %>
  <!-- Input for book_id end -->
  <!-- Label and input for book_id end -->

  <%= f.submit "Create author", class: "btn btn-block btn-outline-secondary" %>
<% end %>
