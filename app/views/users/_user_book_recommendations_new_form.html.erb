<%= form_with(model: @recommendation, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :body %>

    <%= f.text_field :body, class: "form-control" %>
  </div>

  <%= f.hidden_field :sender_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :recipient_id %>

    <%= f.text_field :recipient_id, class: "form-control" %>
  </div>

  <%= f.submit "Create recommendation", class: "btn btn-block btn-outline-secondary" %>
<% end %>
